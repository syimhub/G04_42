<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="6dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgSource"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_system"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/txtOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source: Manual"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtFoodLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Level: 85%"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtFoodWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Weight: 120 g"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 2:05 PM"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
