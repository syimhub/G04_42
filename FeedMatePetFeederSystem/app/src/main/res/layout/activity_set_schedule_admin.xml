<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".AdminSetScheduleActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/orange"
        app:title="Set Schedule"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/baseline_arrow_back_24" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Select User Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select User"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- User Recycler -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECEFF1"
                android:clipToPadding="false"
                android:padding="4dp"
                tools:listitem="@layout/item_schedule"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeding Times"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Prompt message -->
            <TextView
                android:id="@+id/tvSelectUserPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Select a user first"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:padding="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Feeding Times Section -->
            <LinearLayout
                android:id="@+id/layoutFeedingTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/feedingTimesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Time Row 1 -->
                    <LinearLayout
                        android:id="@+id/rowTime1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/time_box_bg"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvFeedingTime1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="--:--"
                            android:textSize="18sp"
                            android:paddingStart="12dp"/>

                        <ImageView
                            android:id="@+id/ivEdit1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_edit_24"
                            android:contentDescription="Edit time 1"
                            android:tint="@color/orange"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvUpcoming1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⏰ Upcoming time"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:layout_marginEnd="8dp"/>
                    </LinearLayout>

                    <!-- Buttons under Time 1 -->
                    <LinearLayout
                        android:id="@+id/time1Buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConfirm1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirm"
                            android:backgroundTint="@color/teal_700"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:backgroundTint="@color/gray"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Time Row 2 -->
                    <LinearLayout
                        android:id="@+id/rowTime2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/time_box_bg"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvFeedingTime2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="--:--"
                            android:textSize="18sp"
                            android:paddingStart="12dp"/>

                        <ImageView
                            android:id="@+id/ivEdit2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_edit_24"
                            android:contentDescription="Edit time 2"
                            android:tint="@color/orange"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvUpcoming2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⏰ Upcoming time"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:layout_marginEnd="8dp"/>
                    </LinearLayout>

                    <!-- Buttons under Time 2 -->
                    <LinearLayout
                        android:id="@+id/time2Buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConfirm2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirm"
                            android:backgroundTint="@color/teal_700"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancel2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:backgroundTint="@color/gray"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Time Row 3 -->
                    <LinearLayout
                        android:id="@+id/rowTime3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/time_box_bg">

                        <TextView
                            android:id="@+id/tvFeedingTime3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="--:--"
                            android:textSize="18sp"
                            android:paddingStart="12dp"/>

                        <ImageView
                            android:id="@+id/ivEdit3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_edit_24"
                            android:contentDescription="Edit time 3"
                            android:tint="@color/orange"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvUpcoming3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⏰ Upcoming time"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:layout_marginEnd="8dp"/>
                    </LinearLayout>

                    <!-- Buttons under Time 3 -->
                    <LinearLayout
                        android:id="@+id/time3Buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConfirm3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirm"
                            android:backgroundTint="@color/teal_700"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancel3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:backgroundTint="@color/gray"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
