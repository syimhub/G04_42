<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".AdminManualFeedActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF9800"
        app:title="Manual Feed"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/baseline_arrow_back_24" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Select User Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select User"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- User Recycler -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECEFF1"
                android:clipToPadding="false"
                android:padding="4dp"
                tools:listitem="@layout/item_schedule"
                android:layout_marginBottom="16dp"/>

            <!-- Manual Feed Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual Feeding Control"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Prompt message (visible before user selection) -->
            <TextView
                android:id="@+id/tvSelectUserPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Select a user first"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:padding="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Manual Feed Section -->
            <LinearLayout
                android:id="@+id/layoutManualFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center_horizontal">

                <!-- Last feeding history -->
                <TextView
                    android:id="@+id/tvLatestHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No feeding history available."
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/time_box_bg"/>

                <!-- Feed status -->
                <TextView
                    android:id="@+id/tvFeedStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Status: Idle"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/time_box_bg"/>

                <!-- Feed Now button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFeedNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feed Now"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <!-- Confirmation Row (hidden initially) -->
                <LinearLayout
                    android:id="@+id/layoutConfirmFeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvConfirmText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Are you sure?"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:textColor="#333333"
                        android:gravity="start"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfirmFeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelFeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:backgroundTint="@color/gray"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
