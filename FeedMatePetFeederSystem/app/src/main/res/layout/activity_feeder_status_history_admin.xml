<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".AdminFeederStatusHistoryActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        app:title="Feeder Status and History"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <!-- Select User Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select User"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECEFF1"
                android:clipToPadding="false"
                android:padding="4dp"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/item_schedule" />

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeder Status and History"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="12dp" />

            <!-- Placeholder Text -->
            <TextView
                android:id="@+id/textSelectPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a user first"
                android:textSize="18sp"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:padding="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- ========================== -->
            <!-- FEEDER STATUS CARD -->
            <!-- ========================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutFeederStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="16dp"
                app:strokeColor="#42A5F5"
                app:strokeWidth="2dp"
                android:backgroundTint="@android:color/white"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feeder Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvFeederStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feeder status will appear here"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textFoodLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Level: -"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/textFoodWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Weight: -"
                        android:textSize="15sp"
                        android:textColor="#333333" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ========================== -->
            <!-- LATEST FEEDING HISTORY CARD -->
            <!-- ========================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:strokeColor="#FFA726"
                app:strokeWidth="2dp"
                android:backgroundTint="@android:color/white"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latest Feeding History"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvHistoryList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No recent feeding history available."
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_history" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
